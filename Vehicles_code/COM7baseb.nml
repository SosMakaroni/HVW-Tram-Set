switch (FEAT_ROADVEHS, SELF, sw_COM7baseb_articulated, extra_callback_info1) {
	0: item_COM7baseb;
	1: item_COM_long;
	2: item_COM_middle;
	3: item_COM_long;
	4: item_COM_middle;
	5: item_COM_long;
	6: item_COM_rear;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

// Szövegek
switch(FEAT_ROADVEHS, SELF, sw_COM7baseb_namep, (extra_callback_info1 >> 8) & 0xFFFF) {
    1: return string(STR_COM7baseb_BUY);
	return CB_RESULT_NO_TEXT;
}
switch(FEAT_ROADVEHS, SELF, sw_COM7baseb_name, extra_callback_info1 & 0xFF) {
    0x11: return string(STR_COM7baseb_INFO); // Jármű infóban név
