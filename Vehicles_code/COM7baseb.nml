switch(FEAT_ROADVEHS, SELF, sw_COM7baseb, (extra_callback_info1 & 0x12)) {
   0x10: sw_COM7baseb_info; // Depó nézet
   0x11: sw_COM7baseb_info; // Jármű infó/Refit nézet
   0x12: sw_COM7baseb_info; // Jármű lista nézet
