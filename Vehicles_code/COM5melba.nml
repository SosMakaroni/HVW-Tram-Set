// --------------------------------------------------------------------------------COM5melba

spriteset(ss_COM5melba_BUY, "src/SIEMENS/MELB/COM5_melba_BUY_8bpp.png")		{tmpl_purchase()}  // Vásárlási jármű
spriteset(ss_COM5melba_BUY_P, "src/SIEMENS/MELB/COM5_melba_BUY_P_8bpp.png")		{tmpl_purchase()} // Vásárlási áramszedő*/

// Rakodási grafika

// Vásárlási grafika
switch (FEAT_ROADVEHS, SELF, sw_COM5melba_purchase, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COM5melba_BUY;    // Alap modell
    1: return ss_COM5melba_BUY_P;    // Alap modell
}

// Lista grafika
switch (FEAT_ROADVEHS, SELF, sw_COMMp_melba_info, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COMMp_melba_info;    // Alap modell
    1: return ss_COMMp_melba_PUP_info;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sw_COM5melba_info, position_in_consist ) {
	1: ss_COML_melba_info;
	2: sw_COMMp_melba_info;
	3: ss_COMS_melba_info;
	4: ss_COMR_melba_info;
    ss_COMF_melba_info;
}

// Játék grafika
switch (FEAT_ROADVEHS, SELF, sw_COMMp_melba, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COMMp_melba;    // Alap modell
    1: return ss_COMMp_melba_PUP;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sw1_COM5melba, position_in_consist ) {
	1: ss_COML_melba;
	2: sw_COMMp_melba;
	3: ss_COMS_melba;
	4: ss_COMR_melba;
    ss_COMF_melba;
}

// Rajz
switch(FEAT_ROADVEHS, SELF, sw_COM5melba, (extra_callback_info1 & 0x12)) {
   0x10: sw_COM5melba_info; // Depó nézet
   0x11: sw_COM5melba_info; // Jármű infó/Refit nézet
   0x12: sw_COM5melba_info; // Jármű lista nézet
   0x00: sw1_COM5melba; // Játék nézet
}

// Csuklosítás
switch (FEAT_ROADVEHS, SELF, sw_COM5melba_articulated, extra_callback_info1) {
	0: item_COM5melba;
	1: item_COM_long;
	2: item_COM_middle;
	3: item_COM_short;
	4: item_COM_rear;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

// Szövegek
switch(FEAT_ROADVEHS, SELF, sw_COM5melba_namep, (extra_callback_info1 >> 8) & 0xFFFF) {
    1: return string(STR_COM5melba_BUY);
	return CB_RESULT_NO_TEXT;
}
switch(FEAT_ROADVEHS, SELF, sw_COM5melba_name, extra_callback_info1 & 0xFF) {
    0x11: return string(STR_COM5melba_INFO); // Jármű infóban név
    0x20: sw_COM5melba_namep; // Vásárlási lista név
	0x21: return string(STR_COM_NAME); // Elővásárlási név
	return CB_RESULT_NO_TEXT;
}


item(FEAT_ROADVEHS, item_COM5melba) {
	property {
        name:							string(STR_COM_NAME);
        climates_available:				bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:				date(2004,02,1);
        model_life:						20;
        vehicle_life:					40;
        reliability_decay:				18;
        refittable_cargo_classes:		bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:	bitmask(CC_PIECE_GOODS, CC_EXPRESS, CC_REFRIGERATED);
        loading_speed:					5;
        sprite_id:						SPRITE_ID_NEW_ROADVEH;
        speed:							70 km/h;
        misc_flags:						bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_TRAM, ROADVEH_FLAG_SPRITE_STACK);
        refit_cost:						0;
        running_cost_base:				RUNNING_COST_ROADVEH;
        power:							400 kW;
        weight:							36 ton;
        cargo_capacity:					36;
		cargo_age_period:				185;
        sound_effect:					SOUND_POWER_STATION;
		length:                  		6;
		variant_group:					item_COM5potsa;
    }
    graphics {
		default:                 		sw_COM5melba;
		purchase:						sw_COM5melba_purchase;
		articulated_part:        		sw_COM5melba_articulated;
		cost_factor:					45 * parapuco;
		running_cost_factor:			76 * pararuco;
		additional_text: 				string(STR_COM5melba_ADAT);
		name:							sw_COM5melba_name;
    }
	livery_override (item_COM_long ) {
		default:						sw_COM5melba;
	}
	livery_override (item_COM_middle ) {
		default:						sw_COM5melba;
	}
	livery_override (item_COM_short ) {
		default:						sw_COM5melba;
	}
	livery_override (item_COM_rear ) {
		default:						sw_COM5melba;
	}

}

