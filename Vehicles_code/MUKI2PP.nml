spriteset(ss_MUKI2P_PUP, "src/MUKI/MUKI1_PUP_1x_8bpp.png")		{tmpl_1(1)} //Áramszedő
alternative_sprites(ss_MUKI2P_PUP, ZOOM_LEVEL_IN_2X, BIT_DEPTH_8BPP, "src/MUKI/MUKI1_PUP_2x_8bpp.png") {tmpl_1(2)}
alternative_sprites(ss_MUKI2P_PUP, ZOOM_LEVEL_IN_4X, BIT_DEPTH_8BPP, "src/MUKI/MUKI1_PUP_4x_8bpp.png") {tmpl_1(4)}
spriteset(ss_MUKI2P_PUPi, "src/MUKI/MUKI1_PUP_8bpp.png")		{tmpl_depo()}
spriteset(ss_VPOT_GBS, "src/MUKI/VPOT_GBS_1x_8bpp.png")		{tmpl_1(1)} //Pótkocsi üres
