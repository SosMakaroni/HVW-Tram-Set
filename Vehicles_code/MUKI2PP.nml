alternative_sprites(ss_VPOT_GBS, ZOOM_LEVEL_IN_4X, BIT_DEPTH_8BPP, "src/MUKI/VPOT_GBS_4x_8bpp.png") {tmpl_1(4)}
spriteset(ss_VPOT_GBSi, "src/MUKI/VPOT_GBS_8bpp.png")		{tmpl_depo()}


// Rakodási grafika
spritegroup sg_MUKI2PP_1_DOBOZ {	loaded:  [ss_MUKI2P];	loading: [ss_MUKI2P];}
spritegroup sg_MUKI2PP_2_GBS {	loaded:  [ss_VPOT_GBS];	loading: [ss_VPOT_GBS];}

spritegroup sg_MUKI2PP_1_DOBOZi {	loaded:  [ss_MUKI2Pi];	loading: [ss_MUKI2Pi];}
spritegroup sg_MUKI2PP_2_GBSi {	loaded:  [ss_VPOT_GBSi];	loading: [ss_VPOT_GBSi];}

// Vásárlási grafika
switch (FEAT_ROADVEHS, SELF, swg_MUKI2PP_purchase, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_MUKI2PP_purchase;    // Alap modell
    1: return ss_MUKI2PP_PDO_purchase;    // Pantonograf (le)
}

// Lista grafika
switch (FEAT_ROADVEHS, SELF, sw2_MUKI2PP_1i, cargo_type_in_veh) {
	ENSP: return sg_MUKI2PP_1_DOBOZi;
	sg_MUKI2PP_1_DOBOZi;
}
switch (FEAT_ROADVEHS, SELF, swg_MUKI2PP_1i, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return sw2_MUKI2PP_1i;    // Alap modell
    1: return ss_MUKI2P_PUPi;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, swg_MUKI2PP_2i, cargo_type_in_veh) {
	ENSP: return sg_MUKI2PP_2_GBSi;
	sg_MUKI2PP_2_GBSi;
}
switch (FEAT_ROADVEHS, SELF, sw1_MUKI2PPi, position_in_consist ) {
	1: swg_MUKI2PP_2i;
	2: ss_toldat;
	3: swg_MUKI2PP_1i;
    swg_MUKI2PP_1i;
}

// Játék grafika
switch (FEAT_ROADVEHS, SELF, sw2_MUKI2PP_1, cargo_type_in_veh) {
	ENSP: return sg_MUKI2PP_1_DOBOZ;
	sg_MUKI2PP_1_DOBOZ;
}
switch (FEAT_ROADVEHS, SELF, swg_MUKI2PP_1, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return sw2_MUKI2PP_1;    // Alap modell
    1: return ss_MUKI2P_PUP;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, swg_MUKI2PP_2, cargo_type_in_veh) {
	ENSP: return sg_MUKI2PP_2_GBS;
	sg_MUKI2PP_2_GBS;
}
switch (FEAT_ROADVEHS, SELF, sw1_MUKI2PP, position_in_consist ) {
	1: swg_MUKI2PP_2;
	2: ss_toldat;
	3: swg_MUKI2PP_1;
    swg_MUKI2PP_1;
}
// Rajz
switch(FEAT_ROADVEHS, SELF, sw_MUKI2PP, (extra_callback_info1 & 0x12)) {
   0x10: sw1_MUKI2PPi; // Depó nézet
   0x11: sw1_MUKI2PPi; // Jármű infó/Refit nézet
   0x12: sw1_MUKI2PPi; // Jármű lista nézet
   0x00: sw1_MUKI2PP; // Játék nézet
}


// Csuklosítás
switch (FEAT_ROADVEHS, SELF, sw_MUKI2PP_articulated, extra_callback_info1) {
    0: item_MUKI2PP;
	1: item_MUKI2PP_2;
	2: item_MUKI2PP_T;
    3: item_MUKI2PP_3;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

// Modelhossz
switch (FEAT_ROADVEHS, SELF, sw_MUKI2PP_length, position_in_consist) {
	1: return 8;
	2: return 5;
	3: return 8;
    return 7;
}

// Szövegek
switch(FEAT_ROADVEHS, SELF, sw_MUKI2PP_namep, (extra_callback_info1 >> 8) & 0xFFFF) {
    1: return string(STR_MUKI1PP_BUY);
	return CB_RESULT_NO_TEXT;
}
switch(FEAT_ROADVEHS, SELF, sw_MUKI2PP_name, extra_callback_info1 & 0xFF) {
    0x11: return string(STR_MUKI1PP_INFO); // Jármű infóban név
    0x20: sw_MUKI2PP_namep; // Vásárlási lista név
	0x21: return string(STR_MUKI1PP_NAME); // Elővásárlási név
	return CB_RESULT_NO_TEXT;
}
switch (FEAT_ROADVEHS, SELF, sw_MUKI2PP_livery_text, cargo_type_in_veh) {
	ENSP: return string(STR_COLOUR_SCHEME_PANTO);
	WOOD: return string(STR_COLOUR_SCHEME_WOOD);
	STEL: return string(STR_COLOUR_SCHEME_STEL);
	return string(STR_COLOUR_SCHEME_LADA);
}

