spriteset(ss_MUKI2PP_purchase, "src/MUKI/MUKI2PP_BUY_8bpp.png")		{tmpl_purchase()} // Vásárlási jármű
spriteset(ss_MUKI2PP_PDO_purchase, "src/MUKI/MUKI1_PDO_8bpp.png")		{tmpl_purchase()} // Vásárlási áramszedő

spriteset(ss_MUKI2P, "src/MUKI/MUKI12_1x_8bpp.png")		{tmpl_1(1)} //Motorkocsi
