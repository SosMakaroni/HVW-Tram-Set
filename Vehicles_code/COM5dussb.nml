spriteset(ss_COM5dussb_BUY, "src/SIEMENS/DUSS/COM5_dussb_BUY_8bpp.png")		{tmpl_purchase()}  // Vásárlási jármű
spriteset(ss_COM5dussb_BUY_P, "src/SIEMENS/DUSS/COM5_dussa_BUY_P_8bpp.png")		{tmpl_purchase()} // Vásárlási áramszedő*/

// Rakodási grafika

// Vásárlási grafika
switch (FEAT_ROADVEHS, SELF, sw_COM5dussb_purchase, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COM5dussb_BUY;    // Alap modell
    1: return ss_COM5dussb_BUY_P;    // Alap modell
}

// Lista grafika
switch (FEAT_ROADVEHS, SELF, sw_COMSp_dussb_info, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COMSp_dussb_info;    // Alap modell
    1: return ss_COMSp_dussa_PUP_info;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sw_COM5dussb_info, position_in_consist ) {
	1: ss_COMM_dussa_info;
	2: sw_COMSp_dussb_info;
	3: ss_COMM_dussc_info;
	4: ss_COMR_dussb_info;
    ss_COMF_dussb_info;
}

// Játék grafika
switch (FEAT_ROADVEHS, SELF, sw_COMSp_dussb, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COMSp_dussb;    // Alap modell
    1: return ss_COMSp_dussa_PUP;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sw1_COM5dussb, position_in_consist ) {
	1: ss_COMM_dussa;
	2: sw_COMSp_dussb;
	3: ss_COMM_dussc;
	4: ss_COMR_dussb;
    ss_COMF_dussb;
}

// Rajz
switch(FEAT_ROADVEHS, SELF, sw_COM5dussb, (extra_callback_info1 & 0x12)) {
   0x10: sw_COM5dussb_info; // Depó nézet
   0x11: sw_COM5dussb_info; // Jármű infó/Refit nézet
   0x12: sw_COM5dussb_info; // Jármű lista nézet
   0x00: sw1_COM5dussb; // Játék nézet
}

// Csuklosítás
switch (FEAT_ROADVEHS, SELF, sw_COM5dussb_articulated, extra_callback_info1) {
	0: item_COM5dussb;
	1: item_COM_middle;
	2: item_COM_short;
	3: item_COM_middle;
	4: item_COM_rear;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

// Szövegek
switch(FEAT_ROADVEHS, SELF, sw_COM5dussb_namep, (extra_callback_info1 >> 8) & 0xFFFF) {
    1: return string(STR_COM5dussb_BUY);
	return CB_RESULT_NO_TEXT;
}
switch(FEAT_ROADVEHS, SELF, sw_COM5dussb_name, extra_callback_info1 & 0xFF) {
    0x11: return string(STR_COM5dussb_INFO); // Jármű infóban név
    0x20: sw_COM5dussb_namep; // Vásárlási lista név
	0x21: return string(STR_COM_NAME); // Elővásárlási név
	return CB_RESULT_NO_TEXT;
}


item(FEAT_ROADVEHS, item_COM5dussb) {
	property {
        name:							string(STR_COM_NAME);
        climates_available:				bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:				date(2006,02,1);
        model_life:						20;
        vehicle_life:					40;
        reliability_decay:				18;
        refittable_cargo_classes:		bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:	bitmask(CC_PIECE_GOODS, CC_EXPRESS, CC_REFRIGERATED);
        loading_speed:					12;
        sprite_id:						SPRITE_ID_NEW_ROADVEH;
        speed:							70 km/h;
        misc_flags:						bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_TRAM, ROADVEH_FLAG_SPRITE_STACK);
        refit_cost:						0;
        running_cost_base:				RUNNING_COST_ROADVEH;
        power:							400 kW;
        weight:							36 ton;
        cargo_capacity:					50;
		cargo_age_period:				185;
        sound_effect:					SOUND_POWER_STATION;
		length:                  		7;
		variant_group:					item_COM5potsa;
    }
    graphics {
		default:                 		sw_COM5dussb;
		purchase:						sw_COM5dussb_purchase;
		articulated_part:        		sw_COM5dussb_articulated;
		cost_factor:					45 * parapuco;
		running_cost_factor:			76 * pararuco;
		additional_text: 				string(STR_COM5dussb_ADAT);
		name:							sw_COM5dussb_name;
    }
	livery_override (item_COM_middle ) {
		default:						sw_COM5dussb;
	}
	livery_override (item_COM_short ) {
		default:						sw_COM5dussb;
	}
	livery_override (item_COM_rear ) {
		default:						sw_COM5dussb;
	    cargo_capacity:					50;
	}

}

