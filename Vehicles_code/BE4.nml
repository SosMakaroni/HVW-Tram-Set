        power:								264 kW;
        weight:							34 ton;
        cargo_capacity:					76;
		cargo_age_period:					30;
        sound_effect:						SOUND_POWER_STATION;
		variant_group:					item_BE3;
    }
    graphics {
		default:                 		sw1_BE4_3_ss;
		purchase:						swg_BE4_purchase;
		articulated_part:        		sw_BE4_3_articulated;
		length:                  		sw_BE4_3_length;
		cargo_subtype_text: 			sw_BE4_3_livery_text;
		cost_factor:					70 * parapuco;
		running_cost_factor:			70 * pararuco;
		additional_text: 				string(STR_BE4_ADAT);
    }
}
