spritegroup sg_BE4_3 {	loaded:  [ss_BE4_3];	loading: [ss_BE4_3];}

switch (FEAT_ROADVEHS, SELF, swg_BE4_purchase, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_BE4_purchase;    // Alap modell
    1: return ss_BE4_PDO_purchase;    // Pantonograf (le)
}
switch (FEAT_ROADVEHS, SELF, sgw_BE4_1, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return sg_BE4_1;    // Alap modell
    1: return ss_BE4_1PUP;    // Pantonograf (fel)
}

switch (FEAT_ROADVEHS, SELF, sw_BE4_3_ss, position_in_consist ) {
	1: sg_BE4_2;
	2: sg_BE4_3;
	3: ss_toldat;
    sgw_BE4_1;
}

switch (FEAT_ROADVEHS, SELF, sw1_BE4_3_ss, cargo_subtype) {
	0: sw_BE4_3_ss;
	CB_RESULT_NO_TEXT;
}
switch (FEAT_ROADVEHS, SELF, sw_BE4_3_articulated, extra_callback_info1) {
    0: item_BE4;
    1: item_BE4_2;
    2: item_BE4_3;
    3: item_BE4_T;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
switch (FEAT_ROADVEHS, SELF, sw_BE4_3_length, position_in_consist) {
	1: return 4;
	2: return 3;
	3: return 8;
    return 8;
}
switch (FEAT_ROADVEHS, SELF, sw_BE4_3_livery_text, cargo_subtype) {
	0: return string(STR_COLOUR_SCHEME_BUDAPEST);
	CB_RESULT_NO_TEXT;
}


