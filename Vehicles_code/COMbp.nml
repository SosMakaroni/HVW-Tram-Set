    1: sgw_COMbp_2;
	2: sg_COMbp_3;
	3: sg_COMbp_4;
	4: sgw_COMbp_5;
	5: sg_COMbp_6;
    sg_COMbp_1;
}

// Rajz
switch(FEAT_ROADVEHS, SELF, sw_COMbp, (extra_callback_info1 & 0x12)) {
   0x10: sw1_COMbpi; // Depó nézet
   0x11: sw1_COMbpi; // Jármű infó/Refit nézet
   0x12: sw1_COMbpi; // Jármű lista nézet
   0x00: sw1_COMbp; // Játék nézet
}

// Csuklosítás
switch (FEAT_ROADVEHS, SELF, sw_COMbp_articulated, extra_callback_info1) {
    0: item_COMbp;
    1: item_COMbp_2;
    2: item_COMbp_3;
    3: item_COMbp_4;
    4: item_COMbp_5;
    5: item_COMbp_6;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
// Modelhossz
switch (FEAT_ROADVEHS, SELF, sw_COMbp_length, position_in_consist) {
	1: return 7;
	2: return 7;
	3: return 7;
	4: return 7;
	5: return 7;
    return 8;
}

// Szövegek
switch(FEAT_ROADVEHS, SELF, sw_COMbp_namep, (extra_callback_info1 >> 8) & 0xFFFF) {
    1: return string(STR_COMbp_BUY);
	return CB_RESULT_NO_TEXT;
}
switch(FEAT_ROADVEHS, SELF, sw_COMbp_name, extra_callback_info1 & 0xFF) {
    0x11: return string(STR_COMbp_INFO); // Jármű infóban név
    0x20: sw_COMbp_namep; // Vásárlási lista név
	0x21: return string(STR_COMbp_NAME); // Elővásárlási név
	return CB_RESULT_NO_TEXT;
}


item(FEAT_ROADVEHS, item_COMbp) {
	property {
        name:								string(STR_COM_NAME);
        climates_available:				bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:				date(2006,08,27);
        model_life:						20;
        vehicle_life:						40;
        reliability_decay:				20;
        refittable_cargo_classes:		bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:	bitmask(CC_PIECE_GOODS, CC_EXPRESS, CC_REFRIGERATED);
        loading_speed:					12;
        sprite_id:							SPRITE_ID_NEW_ROADVEH;
        speed:								50 km/h;
        misc_flags:						bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_TRAM, ROADVEH_FLAG_SPRITE_STACK);
        refit_cost:						0;
        running_cost_base:				RUNNING_COST_ROADVEH;
        power:								800 kW;
        weight:							41 ton;
        cargo_capacity:					39;
		cargo_age_period:					185;
        sound_effect:						SOUND_POWER_STATION;
//		variant_group:					item_COMbp;
    }
    graphics {
		default:                 		sw_COMbp;
		purchase:						swg_COMbp_purchase;
		articulated_part:        		sw_COMbp_articulated;
		length:                  		sw_COMbp_length;
		cost_factor:					58 * parapuco;
		running_cost_factor:			81 * pararuco;
		additional_text: 				string(STR_COMbp_ADAT);
		name:							sw_COMbp_name;
    }
}
