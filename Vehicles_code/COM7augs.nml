    }
	livery_override (item_COM_long ) {
		default:						sw_COM7augs;
	}
	livery_override (item_COM_middle ) {
		default:						sw_COM7augs;
	}
	livery_override (item_COM_rear ) {
		default:						sw_COM7augs;
	}

}

