spriteset(ss_COM7augs_BUY, "src/SIEMENS/AUGS/COM7_augs_BUY_8bpp.png")		{tmpl_purchase()}  // Vásárlási jármű
spriteset(ss_COM7augs_BUY_P, "src/SIEMENS/AUGS/COM7_augs_BUY_P_8bpp.png")		{tmpl_purchase()} // Vásárlási áramszedő*/

// Rakodási grafika

// Vásárlási grafika
switch (FEAT_ROADVEHS, SELF, sw_COM7augs_purchase, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COM7augs_BUY;    // Alap modell
    1: return ss_COM7augs_BUY_P;    // Alap modell
}

// Lista grafika
switch (FEAT_ROADVEHS, SELF, sw_COMMp_augs_info, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COMMp_augs_info;    // Alap modell
    1: return ss_COMMp_augs_PUP_info;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sw_COM7augs_info, position_in_consist ) {
	1: ss_COML_augs_info;
	2: sw_COMMp_augs_info;
	3: ss_COML_augs_info;
	4: ss_COMM_augs_info;
	5: ss_COML_augs_info;
	6: ss_COMR_augs_info;
    ss_COMF_augs_info;
}

// Játék grafika
switch (FEAT_ROADVEHS, SELF, sw_COMMp_augs, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 8 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_COMMp_augs;    // Alap modell
    1: return ss_COMMp_augs_PUP;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sw1_COM7augs, position_in_consist ) {
	1: ss_COML_augs;
	2: sw_COMMp_augs;
	3: ss_COML_augs;
	4: ss_COMM_augs;
	5: ss_COML_augs;
	6: ss_COMR_augs;
    ss_COMF_augs;
}

// Rajz
switch(FEAT_ROADVEHS, SELF, sw_COM7augs, (extra_callback_info1 & 0x12)) {
   0x10: sw_COM7augs_info; // Depó nézet
   0x11: sw_COM7augs_info; // Jármű infó/Refit nézet
   0x12: sw_COM7augs_info; // Jármű lista nézet
   0x00: sw1_COM7augs; // Játék nézet
}

// Csuklosítás
switch (FEAT_ROADVEHS, SELF, sw_COM7augs_articulated, extra_callback_info1) {
	0: item_COM7augs;
	1: item_COM_long;
	2: item_COM_middle;
	3: item_COM_long;
	4: item_COM_middle;
	5: item_COM_long;
	6: item_COM_rear;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

// Szövegek
switch(FEAT_ROADVEHS, SELF, sw_COM7augs_namep, (extra_callback_info1 >> 8) & 0xFFFF) {
    1: return string(STR_COM7augs_BUY);
	return CB_RESULT_NO_TEXT;
}
switch(FEAT_ROADVEHS, SELF, sw_COM7augs_name, extra_callback_info1 & 0xFF) {
    0x11: return string(STR_COM7augs_INFO); // Jármű infóban név
    0x20: sw_COM7augs_namep; // Vásárlási lista név
	0x21: return string(STR_COM_NAME); // Elővásárlási név
	return CB_RESULT_NO_TEXT;
}


