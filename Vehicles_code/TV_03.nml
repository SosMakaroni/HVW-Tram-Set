        sprite_id:							SPRITE_ID_NEW_ROADVEH;
        speed:								60 km/h;
        misc_flags:						bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_TRAM, ROADVEH_FLAG_SPRITE_STACK);
        refit_cost:						0;
        running_cost_base:				RUNNING_COST_ROADVEH;
        power:								296 kW;
        weight:							54 ton;
        cargo_capacity:					93;
		cargo_age_period:					30;
        sound_effect:						SOUND_POWER_STATION;
    }
    graphics {
		default:                 		sw1_TV_03_ss;
		purchase:						swg_TV_purchase;
		articulated_part:        		sw_TV_03_articulated;
		length:                  		sw_TV_03_length;
		cargo_subtype_text: 			sw_TV_03_livery_text;
		cost_factor:					70 * parapuco;
		running_cost_factor:			70 * pararuco;
		additional_text: 				string(STR_TV_03_ADAT);
    }
}
