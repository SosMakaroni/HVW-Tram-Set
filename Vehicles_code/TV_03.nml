spritegroup sg_TV_01 {	loaded:  [ss_TV_01];	loading: [ss_TV_01];}
spritegroup sg_TV_02 {	loaded:  [ss_TV_02];	loading: [ss_TV_02];}
spritegroup sg_TV_03 {	loaded:  [ss_TV_03];	loading: [ss_TV_03];}

switch (FEAT_ROADVEHS, SELF, swg_TV_purchase, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return ss_TV_purchase;    // Alap modell
    1: return ss_TV_PDO_purchase;    // Pantonograf (le)
}
switch (FEAT_ROADVEHS, SELF, sgw_TV_01, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return sg_TV_01;    // Alap modell
    1: return ss_TV_01PUP;    // Pantonograf (fel)
}
switch (FEAT_ROADVEHS, SELF, sgw_TV_03, [
    STORE_TEMP((getbits(extra_callback_info1, 8, 8) < 1 ? CB_FLAG_MORE_SPRITES : 0) | PALETTE_USE_DEFAULT, 0x100),
    getbits(extra_callback_info1, 8, 8)
    ]) {
    0: return sg_TV_03;    // Alap modell
    1: return ss_TV_03PUP;    // Pantonograf (fel)
}


switch (FEAT_ROADVEHS, SELF, sw_TV_03_ss, position_in_consist ) {
    1: ss_toldat;
	2: sg_TV_02;
	3: ss_toldat;
	4: sgw_TV_03;
	5: ss_toldat;
    sgw_TV_01;
}

switch (FEAT_ROADVEHS, SELF, sw1_TV_03_ss, cargo_subtype) {
	0: sw_TV_03_ss;
	CB_RESULT_NO_TEXT;
}
switch (FEAT_ROADVEHS, SELF, sw_TV_03_articulated, extra_callback_info1) {
    0: item_TV_03;
    1: item_TV_03_T;
    2: item_TV_03_2;
    3: item_TV_03_T;
    4: item_TV_03_2;
    5: item_TV_03_T;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
switch (FEAT_ROADVEHS, SELF, sw_TV_03_length, position_in_consist) {
	1: return 4;
	2: return 8;
	3: return 4;
	4: return 5;
	5: return 8;
    return 8;
}
switch (FEAT_ROADVEHS, SELF, sw_TV_03_livery_text, cargo_subtype) {
	0: return string(STR_COLOUR_SCHEME_BUDAPEST);
	CB_RESULT_NO_TEXT;
}


item(FEAT_ROADVEHS, item_TV_03) {
	property {
        name:								string(STR_TV_03_NAME);
        climates_available:				bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:				date(1984,09,01);
        model_life:						14;
        vehicle_life:						40;
        reliability_decay:				10;
        refittable_cargo_classes:		bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:	bitmask(CC_PIECE_GOODS, CC_EXPRESS, CC_REFRIGERATED);
        loading_speed:					36;
